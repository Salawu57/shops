<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <h1>My Products</h1>
        <p>List of all the products...</p>
        <% if (mems.length > 0 ) { %>
        <div class="grid">
            <% for (let member of  mems) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">Members <%=member.MEM_NO %></h1>
                </header>
                <div class="card__content">
                    <div class="info">
                        <p><strong>SURNAME</strong></p>
                         <p><%=member.SURNAME %></p>
                    </div>

                    <div class="info">
                        <p><strong>OTHER NAME</strong></p>
                        <p class=""><%=member.OTHER_NAME %></p> 
                    </div>
                    <div class="info">
                        <p><strong>ADDRESS</strong></p>
                        <p class=""><%=member.ADDRESS %></p> 
                    </div>
                    <div class="info">
                        <p><strong>PHONE NUMBER</strong></p>
                        <p class=""><%=member.PHONE_NUMBER %></p> 
                    </div>
                    <div class="info">
                        <p><strong>EMAIL</strong></p>
                        <p class=""><%=member.Email %></p> 
                    </div>
                    <div class="info">
                        <p><strong>BRANCH</strong></p>
                        <p class=""><%=member.BRANCH %></p> 
                    </div>

                     
                    <!-- <h2 class="product__price">me</h2>
                    <p class="product__description">A very interesting book about so many even more interesting things!</p> -->
                </div>
               
            </article>
            <% } %>
        </div> 
        <% } else { %>
            <h1> No Product Found!</h1>
        <% } %>
    </main>
</body>

</html>